{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends":[
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "commonjs"
    },
    "plugins": [
        "stylistic"
    ],
    "rules": {
        "stylistic/semi": ["error", "always"],
        "no-trailing-spaces": "error"
    }
}